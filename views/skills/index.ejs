<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Developer Skills</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>

  <div>
    <h1>My Developer Skills</h1>
    <ul>
      <% skills.forEach(function(s, idx) { %>
      <li>
        <form action="/skills/<%= idx %>?_method=DELETE" class="delete-form" method="POST">
          <button type="submit">X</button>
        </form>
        <a href="/skills/<%=idx%>"><%= s.skill%></a>
        -
        <%= s.learned ? 'learned' : 'work in progress' %>
      </li>
      <% }); %>
    </ul>
    <a href="/skills/new">Add Dev Skill</a>
  </div>

</body>

</html>